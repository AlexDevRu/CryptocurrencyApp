<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="headerStyle">
        <item name="android:textSize">@dimen/big_textsize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="signInTitleStyle" parent="headerStyle">
        <item name="android:textSize">@dimen/sign_in_textsize</item>
    </style>

    <style name="signInErrorStyle" parent="headerStyle">
        <item name="android:textSize">@dimen/error_sign_in_textsize</item>
        <item name="android:textColor">@color/red</item>
    </style>


    <style name="errorMessagePhotoItemStyle">
        <item name="android:padding">@dimen/base_indent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="loadPhotoErrorButtonStyle">
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="currencyDetailLinkStyle" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="cornerRadius">@dimen/medium_indent</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="strokeWidth">@dimen/currency_item_elevation</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="websiteLinkStyle" parent="currencyDetailLinkStyle">
        <item name="android:textColor">@color/purple_700</item>
        <item name="strokeColor">@color/purple_700</item>
        <item name="icon">@drawable/ic_web</item>
        <item name="android:text">@string/web_site</item>
    </style>

    <style name="techDocLinkStyle" parent="currencyDetailLinkStyle">
        <item name="android:textColor">@color/green</item>
        <item name="strokeColor">@color/green</item>
        <item name="icon">@drawable/ic_tech_doc</item>
        <item name="android:text">@string/tech_documentation</item>
    </style>

    <style name="twitterLinkStyle" parent="currencyDetailLinkStyle">
        <item name="android:textColor">@color/blue</item>
        <item name="strokeColor">@color/blue</item>
        <item name="icon">@drawable/ic_twitter</item>
        <item name="android:text">@string/twitter</item>
    </style>

    <style name="redditLinkStyle" parent="currencyDetailLinkStyle">
        <item name="android:textColor">@color/red</item>
        <item name="strokeColor">@color/red</item>
        <item name="icon">@drawable/ic_reddit</item>
        <item name="android:text">@string/reddit</item>
    </style>

    <style name="messageBoardLinkStyle" parent="currencyDetailLinkStyle">
        <item name="android:textColor">@color/light_green</item>
        <item name="strokeColor">@color/light_green</item>
        <item name="icon">@drawable/ic_message_board</item>
        <item name="android:text">@string/message_board</item>
    </style>

    <style name="announcementLinkStyle" parent="currencyDetailLinkStyle">
        <item name="android:textColor">@color/orange</item>
        <item name="strokeColor">@color/orange</item>
        <item name="icon">@drawable/ic_announcement</item>
        <item name="android:text">@string/announcement</item>
    </style>

    <style name="chatLinkStyle" parent="currencyDetailLinkStyle">
        <item name="android:textColor">@color/teal_700</item>
        <item name="strokeColor">@color/teal_700</item>
        <item name="icon">@drawable/ic_chat</item>
        <item name="android:text">@string/chat</item>
    </style>

    <style name="explorerLinkStyle" parent="currencyDetailLinkStyle">
        <item name="android:textColor">@color/pink</item>
        <item name="strokeColor">@color/pink</item>
        <item name="icon">@drawable/ic_explorer</item>
        <item name="android:text">@string/explorer</item>
    </style>

    <style name="sourceCodeLinkStyle" parent="currencyDetailLinkStyle">
        <item name="android:textColor">?attr/tc</item>
        <item name="strokeColor">?attr/tc</item>
        <item name="icon">@drawable/ic_code</item>
        <item name="android:text">@string/source_code</item>
    </style>


    <style name="progressBarStyle" parent="@android:style/Widget.Material.Light.ProgressBar.Horizontal">
        <item name="android:max">100</item>
        <item name="android:progressBackgroundTint">@color/gray</item>
        <item name="android:progressTint">@color/blue</item>
    </style>


    <style name="editTextConverterStyle">
        <item name="android:ems">10</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="currencyPercentChangeStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/small_indent</item>
    </style>

    <style name="dataTableStyle">
        <item name="header_gravity">center</item>
        <item name="header_vertical_padding">@dimen/base_indent</item>
        <item name="header_horizontal_padding">0dp</item>
        <item name="row_vertical_padding">@dimen/base_indent</item>
        <item name="row_horizontal_padding">@dimen/base_indent</item>
        <item name="header_text_size">@dimen/small_textsize</item>
        <item name="row_text_size">@dimen/small_textsize</item>
        <item name="row_text_color">@color/black</item>
        <item name="header_text_color">@color/black</item>
        <item name="row_background_color">@color/white</item>
        <item name="header_background_color">@color/white</item>
        <item name="persian_number">false</item>
        <item name="corner_radius">@dimen/medium_indent</item>
        <item name="direction">ltr</item>
        <item name="shadow">@dimen/medium_indent</item>
    </style>


    <style name="lineGraphTooltipStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="searchViewStyle">
        <item name="queryHint">@string/search_hint</item>
        <item name="android:maxWidth">@dimen/search_view_max</item>
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="closeIcon">@drawable/ic_baseline_close_24</item>
        <item name="voiceIcon">@drawable/ic_baseline_mic_24</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="toolbarTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/big_textsize</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>