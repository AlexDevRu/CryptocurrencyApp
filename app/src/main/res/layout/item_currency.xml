<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.kulakov_p4_cryptocurrency_app.view_models.items.CurrencyVM" />

        <variable
            name="handler"
            type="com.example.kulakov_p4_cryptocurrency_app.adapters.CurrencyAdapter.Handler" />
    </data>

    <androidx.cardview.widget.CardView
        android:onClick="@{() -> handler.onItemClick()}"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="6dp"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/currencyImageView"
                tools:background="@color/black"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcUrl="@{viewModel.thumbUrl}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/currencyTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@{viewModel.currency.name + ` | ` + viewModel.currency.symbol}"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/currencyPrice"
                app:layout_constraintStart_toEndOf="@id/currencyImageView"
                app:layout_constraintTop_toTopOf="@id/currencyImageView"
                tools:text="Bitcoin | BTC fghgfh gfh gf h fgh fgh fg" />

            <TextView
                android:id="@+id/currencyPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@{`$` + viewModel.price}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="$3465" />

            <LinearLayout
                android:id="@+id/percentChange1h"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/currencyTitle"
                app:layout_constraintStart_toEndOf="@id/currencyImageView"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1ч: " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@{viewModel.quoteUSD.percent_change_1h &lt; 0 ? @color/red : @color/green}"
                    android:text="@{viewModel.percent_change_1h + `%`}" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/percentChange24h"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/currencyTitle"
                app:layout_constraintStart_toEndOf="@id/percentChange1h"
                app:layout_constraintEnd_toStartOf="@id/percentChange30d"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24ч: " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@{viewModel.quoteUSD.percent_change_24h &lt; 0 ? @color/red : @color/green}"
                    android:text="@{viewModel.percent_change_24h + `%`}" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/percentChange30d"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/currencyTitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30дн: " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@{viewModel.quoteUSD.percent_change_30d &lt; 0 ? @color/red : @color/green}"
                    android:text="@{viewModel.percent_change_30d + `%`}" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
