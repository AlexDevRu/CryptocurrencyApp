<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.example.kulakov_p4_cryptocurrency_app.view_models.MainVM" />
    </data>


    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/fragment_main_xml_constraintlayout_scene">


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/currencySwipeList"
            app:onRefresh="@{() -> viewModel.retry()}"
            app:isRefreshing="@{viewModel.isRefreshing}"
            android:visibility="@{!viewModel.loading}"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/currencyList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



        <include
            android:id="@+id/loading"
            layout="@layout/item_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:inProgress="@{viewModel.loading}"
            app:layout_constraintBottom_toBottomOf="@id/currencySwipeList"
            app:layout_constraintEnd_toEndOf="@id/currencySwipeList"
            app:layout_constraintStart_toStartOf="@id/currencySwipeList"
            app:layout_constraintTop_toTopOf="@id/currencySwipeList"
            tools:visibility="gone" />

        <!--<FrameLayout
            android:id="@+id/loading"

            app:layout_constraintBottom_toBottomOf="@id/currencyList"
            app:layout_constraintEnd_toEndOf="@id/currencyList"
            app:layout_constraintStart_toStartOf="@id/currencyList"
            app:layout_constraintTop_toTopOf="@id/currencyList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progressBar"
                android:visibility="@{viewModel.loading}"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/base_indent"
                android:layout_gravity="center" />

        </FrameLayout>-->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sortFilterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_baseline_filter_alt_24" />

        <include
            android:id="@+id/sort_filter"
            layout="@layout/layout_sort_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:viewModel="@{viewModel.sortFilterVM}" />


    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>